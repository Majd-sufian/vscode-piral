<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1,minimum-scale=1,user-scalable=no">
  <% styles.forEach(function(style){ %>
     <link rel="stylesheet" href="<%= style %>" />
  <% }); %>
</head>

<body>
  <div id="root">
    <div class="page">
      <div class="header" x-memo>
        <h1 class="title">Create new project</h1>
        <p class="subTitle">
          Create your own Piral or Pilet instance.
        </p>
      </div>
      <div class="container">
        <div class="cards containerColumn">
          <p class="columnTitle">Select type<span class="errorRepoType errorMessage hide"> [Data is missing!]</span></p>
        <% repoTypes.forEach(function(repoType, index){ %>
          <div
            key="repoType<%= index %>"
            class="card"
            repoType="<%= repoType.type %>"
            >
            <img class="selectedCardTag" src="<%= images.selectedItemIcon %>" />
            <div class="cardTitle">
              <img class="cardTitleIcon" src="<%= repoType.icon %>" />
              <p class="cardTitleTxt"><%= repoType.title %></p>
            </div>
            <p class="cardDescription"><%= repoType.description %></p>
          </div>
        <% }); %>
        </div>
        <div class="information containerColumn">
          <p class="columnTitle">Provide Information</p>
          <div class="extraItem">
            <p class="extraItemLabel">Name<span class="errorName errorMessage hide"> [Data is missing!]</span></p>
            <input
              class="extraItemInput"
              stateName="name" 
            >
          </div>
          <div class="extraItem">
            <p class="extraItemLabel">Version<span class="errorVersion errorMessage hide"> [Data is missing!]</span></p>
            <input
              class="extraItemInput"
              stateName="version" 
              >
          </div>          
          <div class="extraItem">
            <p class="extraItemLabel">Description<span class="errorDescription errorMessage hide"> [Data is missing!]</span></p>
            <textarea
              class="extraItemInput"
              stateName="description"
              ></textarea>
          </div> 
          <div class="extraItem onlyForPilet hide">
            <p class="extraItemLabel">Piral Package<span class="errorPiralPackage errorMessage hide"> [Data is missing!]</span></p>
            <input
              class="extraItemInput"
              stateName="piralPackage" 
              >
          </div>        
          <div class="extraItem onlyForPilet hide">
            <p class="extraItemLabel">NPM Registry<span class="errorNpmRegistry errorMessage hide"> [Data is missing!]</span></p>
            <input
              class="extraItemInput"
              stateName="npmRegistry" 
              >
          </div>        
        </div>
        <div class="cards containerColumn">
          <p class="columnTitle">Select bundler<span class="errorBundler errorMessage hide"> [Data is missing!]</span></p>
          <% bundlers.forEach(function(bundler, index){ %>
            <div
              key="bundler_<%= index %>"
              class="bundlerItem"
              bundler="<%= bundler.type %>"
              >
              <img class="selectedCardTag" src="<%= images.selectedItemIcon %>" />
              <div class="cardTitle">
                <img class="cardTitleIcon" src="<%= bundler.icon %>" />
                <p class="cardTitleTxt"><%= bundler.title %></p>
              </div>
              <div class="cardDescription"><%= bundler.description %></div>
            </div>
          <% }); %>
        </div>
      </div>
    </div>
    <button class="btn create">Create</button>
  </div>
  <% scripts.forEach(function(script){ %>
     <script src="<%= script %>"></script>
  <% }); %>
</body>

</html>